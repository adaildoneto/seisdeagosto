{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "seideagosto/top-most-read",
	"version": "1.0.0",
	"title": "Posts Mais Lidos",
	"category": "seisdeagosto",
	"icon": "chart-bar",
	"description": "Lista dos posts mais lidos do site",
	"keywords": ["mais lidos", "popular", "posts", "most read"],
	"textdomain": "seisdeagosto",
	"attributes": {
		"title": {
			"type": "string",
			"default": "Mais lidas"
		},
		"count": {
			"type": "number",
			"default": 5
		},
		"metaKey": {
			"type": "string",
			"default": "post_views_count"
		},
		"categoryId": {
			"type": "string",
			"default": "0"
		},
		"categoryIds": {
			"type": "array",
			"default": [],
			"items": {
				"type": "number"
			}
		},
		"excludeCategories": {
			"type": "string",
			"default": ""
		},
		"period": {
			"type": "string",
			"default": "year",
			"enum": ["year", "90days", "30days", "week"]
		},
		"offset": {
			"type": "number",
			"default": 0
		},
		"tags": {
			"type": "string",
			"default": ""
		},
		"keyword": {
			"type": "string",
			"default": ""
		},
		"fontSize": {
			"type": "number",
			"default": 16
		},
		"fontFamily": {
			"type": "string",
			"default": "Arial, sans-serif"
		},
		"fontWeight": {
			"type": "string",
			"default": "normal"
		},
		"titleColor": {
			"type": "string",
			"default": "#000000"
		}
	},
	"example": {
		"attributes": {
			"numberOfPosts": 5
		}
	},
	"supports": {
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"text": true,
			"background": true
		}
	}
}
