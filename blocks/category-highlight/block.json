{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "seideagosto/category-highlight",
	"version": "1.0.0",
	"title": "Destaque de Categoria",
	"category": "seisdeagosto",
	"icon": "category",
	"description": "Exibe posts em destaque de uma categoria espec√≠fica",
	"keywords": ["categoria", "destaque", "posts", "category"],
	"textdomain": "seisdeagosto",
	"attributes": {
		"categoryId": {
			"type": "string",
			"default": "0"
		},
		"categoryIds": {
			"type": "array",
			"default": [],
			"items": {
				"type": "number"
			}
		},
		"excludeCategories": {
			"type": "string",
			"default": ""
		},
		"title": {
			"type": "string",
			"default": ""
		},
		"bigCount": {
			"type": "number",
			"default": 1
		},
		"listCount": {
			"type": "number",
			"default": 3
		},
		"showListThumbs": {
			"type": "boolean",
			"default": true
		},
		"offset": {
			"type": "number",
			"default": 0
		},
		"tags": {
			"type": "string",
			"default": ""
		},
		"keyword": {
			"type": "string",
			"default": ""
		},
		"fontSize": {
			"type": "number",
			"default": 16
		},
		"fontFamily": {
			"type": "string",
			"default": "Arial, sans-serif"
		},
		"fontWeight": {
			"type": "string",
			"default": "normal"
		},
		"titleColor": {
			"type": "string",
			"default": "#000000"
		}
	},
	"example": {
		"attributes": {
			"categoryId": "1",
			"numberOfPosts": 4
		}
	},
	"supports": {
		"html": false,
		"align": true,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"text": true,
			"background": true,
			"link": true
		}
	}
}
